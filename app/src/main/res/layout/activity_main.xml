<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/CajaEditar"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/inputNombreMascota"
            android:hint="Nombre Mascota "
            android:paddingTop="10dp"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/inputRaza"
            android:hint="Raza "
            android:paddingTop="10dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/inputNombreDueño"
            android:hint="Nombre Dueño "
            android:inputType="textPersonName"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/inputTelefono"
            android:hint="Teléfono "
            android:inputType="number"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="CANCELAR"
            android:layout_marginTop="10dp"
            android:background="@drawable/regbot"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00c362"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="LISTA DE MASCOTAS"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/listViewMascotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>